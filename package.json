{
  "name": "my-github-pages",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently \"npm run build:watch\" \"npm run serve\" \"npm run css:watch\"",
    "serve": "lite-server --baseDir=docs",
    "build": "npm run build:ts && npm run build:css",
    "build:ts": "tsc",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./docs/css/main.css",
    "build:watch": "tsc --watch",
    "css:watch": "tailwindcss -i ./src/styles/main.css -o ./docs/css/main.css --watch",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d docs"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.0",
    "gh-pages": "^6.0.0",
    "lite-server": "^2.6.1",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3"
  }
}
